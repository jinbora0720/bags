saveRDS(list(rmspe = mgp2$rmspe,
             mape = mgp2$mape,
             coverage = mgp2$coverage,
             meanwidth = mgp2$meanwidth),
        paste0(path, "sim2/sim2b_mgp.RDS"))

saveRDS(list(rmspe = inlares2$rmspe,
             mape = inlares2$mape,
             coverage = inlares2$coverage,
             meanwidth = inlares2$meanwidth,
             rmspe_ns = inlares2$rmspe_ns,
             mape_ns = inlares2$mape_ns,
             coverage_ns = inlares2$coverage_ns,
             meanwidth_ns = inlares2$meanwidth_ns),
        paste0(path, "sim2/sim2b_inla.RDS"))
